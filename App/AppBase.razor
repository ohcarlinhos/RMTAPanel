<Router AppAssembly="@typeof(AppBase).Assembly">
    <Found Context="routeData">
        <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
            <NotAuthorized>
                <MudStack Justify="Justify.FlexStart" AlignItems="AlignItems.Start" Class="ma-10">
                    <MudText>Você não tem autorização para acessar essa página.</MudText>
                    <MudButton Color="Color.Secondary" Variant="Variant.Filled" Href="login">Acessar Painel</MudButton>
                </MudStack>
            </NotAuthorized>
        </AuthorizeRouteView>

        <FocusOnNavigate RouteData="@routeData" Selector="h1"/>
    </Found>

    <NotFound>
        <PageTitle>Nada por aqui...</PageTitle>
        <LayoutView Layout="@typeof(MainLayout)">
            <MudText Class="ma-10" role="alert">Essa página não existe!</MudText>
        </LayoutView>
    </NotFound>
</Router>