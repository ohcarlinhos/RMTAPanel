@page "/login"
@using App.Services
@inject AuthenticateService AuthService
@attribute [AllowAnonymous]

<PageTitle>Acessar | Painel - Registra meu tempo aí!</PageTitle>

<MudContainer MaxWidth="MaxWidth.ExtraSmall" Class="mt-20">
    <AuthorizeView>
        <Authorized>
            <MudStack Justify="Justify.Center">
                <MudText>Desaja sair?</MudText>
                <MudButton Variant="Variant.Filled" OnClick="@Logout">Sair</MudButton>
            </MudStack>
        </Authorized>

        <NotAuthorized>
            <LoginForm/>
        </NotAuthorized>
    </AuthorizeView>
</MudContainer>

@code {

    async Task Logout()
    {
        await AuthService.Logout();
    }

}