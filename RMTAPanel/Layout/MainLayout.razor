@inherits LayoutComponentBase

<MudThemeProvider/>
<MudPopoverProvider/>

<MudDialogProvider/>
<MudSnackbarProvider/>

<MudLayout>
    <MudAppBar>
        <MudText Typo="Typo.h6" Class="pa-5">Registra meu tempo aí!</MudText>

    </MudAppBar>
    <MudDrawer Open="true">
        <MudText Typo="Typo.h6" Class="pa-5">Navegação</MudText>

        <MudNavMenu>
            <MudNavLink Href="/" Match="NavLinkMatch.All">Dashboard</MudNavLink>
            <MudNavLink Href="/login" Match="NavLinkMatch.Prefix">Acessar</MudNavLink>
            <MudNavLink Href="/users" Match="NavLinkMatch.Prefix">Usuários</MudNavLink>
        </MudNavMenu>
    </MudDrawer>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>